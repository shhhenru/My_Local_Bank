<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewDBS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dbs" />

    <ImageButton
        android:id="@+id/btnDbs"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="dbsimage"
        android:scaleType="fitCenter"
        android:src="@drawable/dbs" />

    <TextView
        android:id="@+id/textViewOCBC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ocbc" />

    <ImageButton
        android:id="@+id/btnOcbc"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ocbc"
        android:contentDescription="ocbcimage" />

    <TextView
        android:id="@+id/textViewUOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/uob" />

    <ImageButton
        android:id="@+id/btnUob"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="uobimage"
        android:scaleType="fitCenter"
        android:src="@drawable/uob" />
</LinearLayout>
